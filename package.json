{
    "name": "atma-server",
    "description": "Server Application",
    "author": {
        "name": "Alexander Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "0.4.28",
    "main": "./lib/server.js",
    "types": "./lib/server.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/atmajs/atma-server.git"
    },
    "license": "MIT",
    "dependencies": {
        "appcfg": "^0.2.56",
        "atma-class": "^1.1.79",
        "atma-io": "^1.2.26",
        "atma-loader-ts": "^1.1.11",
        "atma-logger": ">0.0.81",
        "atma-utils": "^0.1.30",
        "class-json": "^0.2.67",
        "includejs": "^0.15.19",
        "maskjs": ">=0.54.23",
        "ruta": "^0.2.32",
        "socket.io": "^1.7.4",
        "static-content": "^1.1.25"
    },
    "scripts": {
        "build": "app-bundler && npm run build-dts",
        "build-dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "watch": "app-bundler -watch",
        "release": "atma bump && npm run build && git add -A && git commit -am \"bump\" && npm publish && git push",
        "test": "atma test",
        "server": "atma server"
    },
    "devDependencies": {
        "@types/node": "^12.12.6",
        "app-bundler": "0.0.33",
        "atma": "^0.12.13",
        "atma-io-middleware-importer": "^1.1.30",
        "atma-io-middleware-yml": "^1.1.25",
        "atma-loader-babel": "^1.0.21",
        "body-parser": "latest",
        "class-mongo": "^0.2.69",
        "dts-bundle": "^0.7.3",
        "mongodb": "latest",
        "supertest": "~0.13.0",
        "tslib": "^1.7.1"
    },
    "app-bundler": {
        "file": "src/export-lib.js",
        "outputMain": "lib/server.js",
        "package": {
            "module": "commonjs",
            "commonjs": {
                "output": "simplified"
            }
        },
        "extensions": {
            "io": {
                "type": "js"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "dynamicDependencies": [
            "appcfg",
            "atma-utils",
            "atma-io",
            "atma-class",
            "atma-logger",
            "includejs",
            "ruta",
            "maskjs",
            "socket.io",
            "static-content",
            "^http$",
            "^https$",
            "^net$",
            "yamljs"
        ],
        "middlewares": {
            "yml": [
                "atma-io-middleware-yml:read"
            ],
            "js": [
                "atma-io-middleware-importer:read"
            ],
            "ts": [
                "atma-io-middleware-importer:read",
                "atma-loader-ts:read"
            ]
        },
        "prebuild": [
            "tools/cfg-defaults.js"
        ]
    },
    "atma": {
        "settings": {
            "atma-utest": {
                "include": {
                    "amd": true
                }
            },
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "io": {
                "extensions": {
                    "js": [
                        "atma-io-middleware-importer:read"
                    ],
                    "ts": [
                        "atma-io-middleware-importer:read",
                        "atma-loader-ts:read"
                    ]
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "ts",
                    "test"
                ],
                "typescript": {
                    "compilerOptions": {
                        "typeRoots": [
                            "./node_modules/@types",
                            "./typings",
                            "./typings-other"
                        ],
                        "target": "es5",
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "CommonJS"
                        },
                        "sourceMap": false
                    }
                }
            }
        },
        "plugins": [
            "atma-loader-babel",
            "atma-loader-ts",
            "atma-io-middleware-yml"
        ]
    }
}
