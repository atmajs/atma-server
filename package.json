{
    "name": "atma-server",
    "description": "Server Application",
    "author": {
        "name": "Alexander Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "0.5.29",
    "main": "./lib/server.js",
    "types": "./lib/server.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/atmajs/atma-server.git"
    },
    "license": "MIT",
    "dependencies": {
        "alot": "^0.3.12",
        "appcfg": "^0.5.5",
        "atma-io": "^1.3.7",
        "atma-logger": ">0.0.81",
        "atma-utils": "^0.2.60",
        "class-json": "^0.3.7",
        "includejs": "^0.17.4",
        "maskjs": "^0.72.36",
        "memd": "^0.3.10",
        "ruta": "^0.2.70",
        "socket.io": "^4.4.1",
        "static-content": "^1.2.2"
    },
    "scripts": {
        "build": "app-bundler && npm run dts",
        "dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "watch": "app-bundler -watch",
        "release": "echo \"Run atma pub -m \"message\"\"",
        "test": "atma test",
        "server": "atma server",
        "test-server": "atma server --TEST"
    },
    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/supertest": "^2.0.11",
        "app-bundler": "^0.2.15",
        "atma": "^0.15.24",
        "atma-io-middleware-importer": "^1.1.38",
        "atma-io-middleware-yml": "^1.1.25",
        "atma-loader-ts": "^1.2.7",
        "body-parser": "latest",
        "class-mongo": "^0.2.69",
        "dts-bundle": "^0.7.3",
        "mongodb": "latest",
        "supertest": "^6.3.4",
        "tslib": "^1.7.1"
    },
    "app-bundler": {
        "file": "src/export.ts",
        "outputMain": "lib/server.js",
        "package": {
            "module": "commonjs",
            "commonjs": {
                "output": "simplified"
            },
            "moduleWrapper": "custom",
            "moduleWrapperCustomPath": "./src/umd.js"
        },
        "extensions": {
            "io": {
                "type": "js"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "dynamicDependencies": [
            "appcfg",
            "alot",
            "atma-utils",
            "atma-io",
            "atma-class",
            "atma-logger",
            "includejs",
            "ruta",
            "maskjs",
            "socket.io",
            "static-content",
            "^http$",
            "^https$",
            "^net$",
            "^os$",
            "yamljs",
            "class-json"
        ],
        "middlewares": {
            "yml": [
                "atma-io-middleware-yml:read"
            ],
            "js": [
                "atma-io-middleware-importer:read"
            ],
            "ts": [
                "atma-io-middleware-importer:read",
                "atma-loader-ts:read"
            ]
        },
        "prebuild": [
            "tools/cfg-defaults.js"
        ]
    },
    "atma": {
        "settings": {
            "atma-utest": {
                "include": {
                    "amd": true
                }
            },
            "include": {
                "amd": true,
                "extentionDefault": {
                    "js": "ts"
                }
            },
            "io": {
                "extensions": {
                    "js": [
                        "atma-io-middleware-importer:read"
                    ],
                    "ts": [
                        "atma-io-middleware-importer:read",
                        "atma-loader-ts:read"
                    ]
                }
            },
            "atma-loader-ts": {
                "extensions": [
                    "ts",
                    "test"
                ],
                "typescript": {
                    "compilerOptions": {
                        "typeRoots": [
                            "./node_modules/@types",
                            "./typings",
                            "./typings-other"
                        ],
                        "target": "es2020",
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "CommonJS"
                        },
                        "sourceMap": false,
                        "esModuleInterop": true
                    }
                }
            }
        },
        "plugins": [
            "atma-loader-ts",
            "atma-io-middleware-yml"
        ]
    }
}
