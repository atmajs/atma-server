{
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "lib": ["es2015", "es2015.promise", "dom"],
        "typeRoots": [
            "node_modules/@types",
            "typings/globals",
            "typings-other"
        ],
        "types": ["node", "assertion", "atma-utest", "string", "jquery", "mask", "ruta"],
        "declaration": true,
        "target": "es2020",
        "module": "commonjs",
        "sourceMap": false,
        "experimentalDecorators": true,
        "esModuleInterop": true
    }
}
